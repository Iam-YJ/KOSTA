<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
 <head>
  <title> New Document </title>
  
  <script>
  
  function imgInfo(index){
	  // 자바스크립트에서 img 객체 접근하기 
	  // 1)document.images[index].속성
	  // 2) document.이미지이름.속성
	  // 3) id로 찾기 - > document.getElementById("아이디");
	  
	  var str = "";
	  
	  switch(index){
	  case 0 : //고양이
		  str += "name : "+ document.images[0].name + "<br>"; 
		  break;
	  case 1: //강아지
		  str += "name : "+ document.images[1].name + "<br>"; 
		  break;
	  }
	   
  }
  </script>
  
 </head>

 <body>
 <h1> img 객체</h1>

 <img src="img/cat.gif" name="cat" width="100" height="80" 
   alt="고양이그림"/>

<img src="img/dog.gif" name="dog" width="70" height="60" 
   alt="강아지그림" border="10"/>

 <hr>
 <span onclick="imgInfo(0)" >[고양이 정보]</span>
 <span onclick="imgInfo(1)">[강아지 정보]</span> 
 <hr>

  <span >[고양이 정보]</span>
 <span >[강아지 정보]</span>

 <hr>

  <span>[고양이 정보]</span>
 <span >[강아지 정보]</span>

  
 </body>

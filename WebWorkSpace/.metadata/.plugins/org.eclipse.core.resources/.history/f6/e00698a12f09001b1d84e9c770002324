  <script type="text/javascript">
  setTimeout( function imgChange(imgObj){
	  var im = ["tiger.gif","dog.gif","cat.gif","monkey.gif"];
	  var index = 0;

	  while(index < im.length ){
		 // alert(image[i]);
	  	imgObj.src = "img/"+im[index++];
	  }
	  
  },1000);
  
  </script>
  
  
 </head>

 <body>

 <img src="img/cat.gif" id="img" onMouseover="imgChange(this)"/>
  

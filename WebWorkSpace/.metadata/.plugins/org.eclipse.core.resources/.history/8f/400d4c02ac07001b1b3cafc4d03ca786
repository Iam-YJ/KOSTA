<body onload="todaySet()">
	<script>
		function timeStart() {
			var day = new Date();
			
			var status = "AM";
			var hour = Date.getHours();
			var min = Date.getMinutes();
			var sec = Date.getSecondes();
			
			if(hour >= 12){
				status = "PM"; 
				hour -= 12;
				if(hour < 10){
					hour = 0 + hour;
				}
			}
			
			if(min < 10){
					min = 0 + min;
			}
		
			if(sec < 10){
				sec = 0 + sec;
			}
			
			
		
			document.f.time.value = day;o
			document.f.time.value = status;
			document.f.time.value += hour;
			
		}
	</script>

	<form name="f">
		<input type="text" name="time" /> 
		<input type="button" value="시작" onclick="timeStart()"/>
		<input type="button" value="중지"/>
	</form>

</body>

  <meta name="Generator" content="EditPlus">
  <meta name="Author" content="">
  <meta name="Keywords" content="">
  <meta name="Description" content="">
 
 </head>
 
 <style>
  #a{border : inset 10px red ; }
  #b{background : yellow; }
  
  .a{border : groove 10px green; }
  .b{background : pink; }
  
 
 </style>
 
 <script>
 function imgOver(imgObj){
	// alert("hi");
	  imgObj.width *= 2;
	  imgObj.height *= 2;
	  
	  //css 주고싶음 : 대상.style.속성 = 값;
	  //imgObj.style.border = "double 10px gold";
	  
	  //css를 위에 style로 정의해놓고 적용하기(id or class)
	  imgObj.id = "a";

	  

 }
 
 function imgOut(imgObj){
		// alert("hi");
		  imgObj.width /= 2;
		  imgObj.height /= 2;
		  
		  return;
	 }
 
 function changeImg(imgName){
	document.images[0].src = "img/"+imgName;
	 
 }
 </script>
 

 <body>
 <img src="img/cat.gif" /><br/><br/>

<span onclick="changeImg('monkey.gif')">[ 원숭이 ]</span> &nbsp;&nbsp;
<span onclick="changeImg('tiger.gif')">[ 사자 ]</span> &nbsp;&nbsp;
<span onclick="changeImg('cat.gif')">[ 고양이 ]</span> &nbsp;&nbsp;
<span onclick="changeImg('dog.gif')">[ 강아지 ]</span> &nbsp;&nbsp;
  
<hr color="red"/>

<img src="img/monkey.gif" width="70" height="60" onMouseover="imgOver(this)" onMouseOut="imgOut(this)"/>&nbsp;&nbsp;

<img src="img/cat.gif" width="70" height="60" onMouseover="imgOver(this)" onMouseOut="imgOut(this)"/>&nbsp;&nbsp;

<img src="img/dog.gif" width="70" height="60" onMouseover="imgOver(this)" onMouseOut="imgOut(this)" />&nbsp;&nbsp;

<img src="img/tiger.gif"  width="70" height="60" onMouseover="imgOver(this)" onMouseOut="imgOut(this)"/>&nbsp;&nbsp;

<div class="a b" id="a b">ddd</div>
 
 </body>
</html>

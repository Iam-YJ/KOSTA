		var ageValue = th.value;
		
		//ageValue가 숫자인지 체크한다
		

	}
	
	//숫자 유무 체크하는 함수 : true 이면 숫자이다, false이면 숫자 아니다.
	function numberCheck(num){
		if(isNaN(num)){
			
		}
	}
	
</script>



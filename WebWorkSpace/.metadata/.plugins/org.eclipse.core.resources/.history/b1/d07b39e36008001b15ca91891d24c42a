<script>
	//id에 영문만 허용하도록
	function IdCheck(th) {
		//alert(th.value)
		var idValue = th.value.toUpperCase();

		/*		for (var i = 0; i < idValue.length; i++) {
		 var ch = idValue.charAt(i);
		 //alert(ch);
		 if<ch < "A" || ch > "Z"){
		 console.log(ch+"는 잘못되었습니다.");
		 th.value="";
		 th.focus();
		 return;
		 }
		 }*/

		//Id에 숫자, 영문, 특수문자 허용(!,_,@)하기
		//허용가능한 문자열을 만든다
		var data = "0123456789QWERTYUIOPASDFGHJKLZXCVBNM!_@";

		for (var i = 0; i < idValue.length; i++) {

			var check = idValue.charAt(i);

			if (data.indexOf(check) == -1) {
				//console.log("사용할 수 없습니다.");
				document.getElementById("error").innerHTML = "<b style='color:red'>"
						+ "  " + check + "는 사용할 수 없습니다. </b>"
				th.value = "";
				th.focus();
				return;
			}
		}
		document.getElementById("error").innerHTML = "<b style='color:blue'>"
				+ "  " + check + "사용가능한 아이디 입니다. </b>"
		th.value = "";
		th.focus();
	}

	//나이 체크하기

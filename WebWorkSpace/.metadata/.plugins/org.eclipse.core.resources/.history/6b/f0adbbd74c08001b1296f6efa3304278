<body>
	<h3>String 관련 함수</h3>
	<script>
		var str = "abcd abcd abcd";
		var str2 = new String("abcd abcd abcd");

		document.write("<h3>");
		document.write(`typeof str : ${typeof str}<br> `);
		document.write(`typeof str2 : ${typeof str2}<br> `);

		document.write(`str = ${str}<br>`);
		document.write(`str2 = ${str2}<br>`);

		document.write(`str==str2 :  ${str==str2}<br>`); //value 비교
		document.write(`str==str2 :  ${str===str2}<br>`); //value + type 비교 

		document.write("str.length = " + str.length + "<br>");
		document.write("<br>");
		
		
		//charAt(index) : index에 해당하는 문자 가져오기
		document.write("str.charAt(0) = " + str.charAt(0) + "<br>");
		document.write("str.charAt(3) = " + str.charAt(3) + "<br>");
		document.write("str.charAt(6) = " + str.charAt(6) + "<br>");
		document.write("str.charAt(18) = " + str.charAt(18) + "<br>");
		document.write("<br>");
		
		//indexOf(문자) , lastIndexOf(문자) : 문자에 해당하는 index 가져오기
		document.write("str.indexOf('b') = " + str.indexOf('b') + "<br>");
		document.write("str.indexOf('f') = " + str.indexOf('f') + "<br>");
		document.write("str.indexOf('b',5) = " + str.indexOf('b',5) + "<br>");
		document.write("<br>");

		document.write("str.lastIndexOf('b') = " + str.lastIndexOf('b')+"<br>"");
		document.write("str.lastIndexOf('f') = " + str.lastIxOf('b') + "<bndexOf('f') + "<br>");
		document.write("str.lastIndexOf('f',3) = " + str.lastIndexOf('f') + "<br>");
		document.write("<br>");
		
		
		
		
		/*
			문자 추출
			 1) slice(index1, index2)
			 2) substring(index1, index2)
			 3) substr(index1, length)
		*/
		
		document.write("str.slice(0,3) : " + str.slice(0,3) + "<br>");
		document.write("str.slice(2,3) : " + str.slice(2,3) + "<br>");
		document.write("str.slice(3,3) : " + str.slice(3,3) + "<br>");
		document.write("str.slice(5) : " + str.slice(5) + "<br>");
		document.write("<br>");

		document.write("str.substring(0,3) : " + str.substring(0,3) + "<br>");
		document.write("str.substring(2,3) : " + str.substring(2,3) + "<br>");
		document.write("str.substring(3,3) : " + str.substring(3,3) + "<br>");
		document.write("str.substring(5) : " + str.substring(5) + "<br>");
		document.write("<br>");

		document.write("str.substr(0,3) : " + str.substr(0,3) + "<br>");
		document.write("str.substr(2,3) : " + str.substr(2,3) + "<br>");
		document.write("str.substr(3,3) : " + str.substr(3,3) + "<br>");
		document.write("str.substr(5) : " + str.substr(5) + "<br>");
		document.write("<br>");
		
		/**
			특정 문자를 기준으로 분리하기 - 결과 배열로 나온다 
			split(문자)
		*/
		
		

		document.write("</h3>");
	</script>

</body>

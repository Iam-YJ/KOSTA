 <head>
  <title> New Document </title>
  <meta name="Generator" content="EditPlus">
  <meta name="Author" content="">
  <meta name="Keywords" content="">
  <meta name="Description" content="">
 
 </head>
 <script>
 function imgOver(imgObj){
	// alert("hi");
	  imgObj.width = "300";
	  imgObj.height = "300";

 }
 
 function imgOut(imgObj){
		// alert("hi");
		  imgObj.width = "100";
		  imgObj.height = "100";
		  
		  return;
	 }
 
 function changeImg(imgName){
	document.images[0].src = "img/"+imgName;
	 
 }
 </script>
 

 <body>
 <img src="img/cat.gif" /><br/><br/>

<span onclick="changeImg('monkey.gif')">[ 원숭이 ]</span> &nbsp;&nbsp;
<span onclick="changeImg('tiger.gif')">[ 사자 ]</span> &nbsp;&nbsp;
<span onclick="changeImg('cat.gif')">[ 고양이 ]</span> &nbsp;&nbsp;
<span onclick="changeImg('dog.gif')">[ 강아지 ]</span> &nbsp;&nbsp;
  
<hr color="red"/>

<img src="img/monkey.gif" width="70" height="60"/>&nbsp;&nbsp;

<img src="img/cat.gif" width="70" height="60"/>&nbsp;&nbsp;

<img src="img/dog.gif" onMouseover="imgOver(this)" onMouseOut="imgOut(this)" />&nbsp;&nbsp;

<img src="img/tiger.gif" onMouseover="imgOver(this)" onMouseOut="imgOut(this)"/>&nbsp;&nbsp;
 
 </body>

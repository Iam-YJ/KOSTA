<title>Insert title here</title>
<style type="text/css">
input {
	border: solid purple 5px;
}

input[type=text] {
	width: 600px;
	height: 40px;
	font-size: 20px;
	background-color: yellow
}
</style>

<script type = "text/javascript">
	function write2() {
		var word2 = ["아", "이", "엠", "그", "루", "트"];
		var index = 0;

		document.f.text.value += word2[index++];
		if(index == word2.length){
			index = 0;
			return;
		}		
		setTimeout("write2()",100);

	}
</script>
</head>
<body>
	<form name="f">
		<Input type="text" name="text" /> <input type="button" value="클릭"
			onclick="document.f.text.value='';write2()" />
	</form>

</body>

<script>
	function write() {
		var word = ["아","이","엠","그","루","트"];
		
		for(i=0; i<word.length; i++){
			document.write(word[i]);
		}
	}
</script>
</head>
<body>
	<form name="f">
		<Input type="text" name="text" /> <input type="button" value="클릭"
			onload=setInterval( "write()",1000) />
	</form>

</body>

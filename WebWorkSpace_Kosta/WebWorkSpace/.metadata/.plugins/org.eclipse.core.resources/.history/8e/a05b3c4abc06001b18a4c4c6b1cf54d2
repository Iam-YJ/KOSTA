		var b = 101;
		var c = "희정";
		d = 3.14 // var 키워드 생략 

		//브라우저에 출력
		document.write("<h4>");
		document.write("a = " + a + ", " + (typeof a) + "<br>");
		document.write("b = " + a + ", " + (typeof a) + "<br>");
		document.write("c = " + a + ", " + (typeof a) + "<br>");
		document.write("d = " + a + ", " + (typeof a) + "<br>");

		document.write("</h4>");
	</script>

